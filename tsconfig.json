{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "lib": ["dom", "es7"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "strict": true,
        "target": "es6",
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    },
    "include": ["src/**/*"]
}
